<div class="col-sm-6 col-md-4 col-lg-4">
  <div class="card card h-100 img-thumbnail bg-transparent">

    <%= content_tag 'div', '', class: 'event-background',
                    style: "background-image: url(#{asset_path('event_thumb.jpg')})" %>


    <div class="thumbnail-inner event-info-inner h-100">
      <div class="card-body">
        <div class="event-description">
          <h3><%= link_to event.title, event_path(event) %></h3>
          <h3 class="fs-6"><%= l event.datetime, format: :short %></h3>
          <div class="buffer-both"><%= event.address %></div>
        </div>
        <div>
          <% event.visitors.each do |user| %>
            <%= image_tag user_avatar_thumb(user), class: 'img-icon', title: user.name %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
