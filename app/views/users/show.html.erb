<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user), class: 'user-avatar shadow' %>


  <% if @user == current_user %>
    <p class="buffer-top">
      <%= link_to "#{I18n.t('forms.links.edit_profile')}", edit_user_path(@user),
                  class: 'btn btn-default' %>
    </p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= I18n.t('forms.text.organized_by') %></h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= I18n.t('empty_state') %></p>
      <% end %>
    </div>
  </div>
</div>
