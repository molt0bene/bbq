<span class="user">
  <span class="user-avatar">
    <!-- fix -->
    <!-- в photo исправить хэлперы и вьюхи -->
    <!-- describe: test -->
    <%= image_tag(user.avatar.variant(resize_to_fit: [50, 50]), class: 'img-thumbnail') %>
  </span>
  <span class="user-name">
    <% if request.path == user_path(user) %>
      <%= user.name %>
    <% else %>
      <%= link_to user.name, user_path(user) %>
    <% end %>
  </span>
</span>
