<h2><%= I18n.t('forms.headers.registrations.new') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo:false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email do %>
      <%= bi_icon('envelope') %>
      <%= User.human_attribute_name :email %>
    <% end %>

    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :password do %>
      <%= bi_icon('key') %>
      <%= User.human_attribute_name :password %>

      <% if @minimum_password_length %>
        <em>(<%= t('views.labels.minimum') %> <%= I18n.t('chars', count: @minimum_password_length) %>)</em>
      <% end %>
    <% end %>

    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation do %>
      <%= bi_icon('key') %>
      <%= User.human_attribute_name :password_confirmation %>
    <% end %>

    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "#{I18n.t('forms.buttons.register')}", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
