<h2><%= I18n.t('forms.headers.registrations.edit') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo:false }, html: { method: :put }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <div class='form-group'>
    <%= bi_icon('envelope') %>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('views.waiting_confirm') %> <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class='form-group'>
    <%= bi_icon('key') %>
    <%= f.label :password %> <i><%= t('views.labels.leave_blank') %></i><br />
    <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= I18n.t('chars', count: @minimum_password_length) %> <%= t('views.labels.minimum') %></em>
    <% end %>
  </div>

  <div class='form-group'>
    <%= bi_icon('key') %>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= bi_icon('key') %>
    <%= f.label :current_password %> <i><%= t('views.labels.type_to_save') %></i><br />
    <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class='actions'>
    <%= f.submit 'Обновить', class: 'btn btn-primary' %>
  </div>
<% end %>

<h3>Удалить аккаунт</h3>

<p><%= t('views.delete_question') %> <%= button_to t('forms.buttons.delete_account'), registration_path(resource_name),
                          data: { confirm: t('forms.links.are_you_sure') }, method: :delete,
                          class: 'btn btn-danger'%></p>

<%= link_to t('forms.links.back'), :back %>
