<h2>Редактирование пользователя</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <div class='form-group'>
    <%= fa_icon('envelope') %>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Ожидаем подтверждения от: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class='form-group'>
    <%= fa_icon('key') %>
    <%= f.label :password %> <i>(если не хотите менять, оставьте поле пустым)</i><br />
    <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= I18n.t('chars', count: @minimum_password_length) %> минимум</em>
    <% end %>
  </div>

  <div class='form-group'>
    <%= fa_icon('key') %>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= fa_icon('key') %>
    <%= f.label :current_password %> <i>(введите его для сохранения изменений)</i><br />
    <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class='actions'>
    <%= f.submit 'Обновить', class: 'btn btn-primary' %>
  </div>
<% end %>

<h3>Удалить аккаунт</h3>

<p>Вам не понравились наши "Шашлыки"? <%= button_to 'Удалить аккаунт', registration_path(resource_name),
                          data: { confirm: 'Вы уверены?' }, method: :delete,
                          class: 'btn btn-danger'%></p>

<%= link_to 'Назад', :back %>
